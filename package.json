{
  "name": "@iad-os/fantocci",
  "version": "0.6.1",
  "description": "Http Testing Tool",
  "bin": {
    "@iad-os/fantocci": "./dist/.bin/cli.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx watch --inspect src/index.ts | pino-pretty-compact",
    "update-schema": "tsx --inspect src/index.ts --schema",
    "start": "tsx src/index.ts  | pino-pretty-compact",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "clean": "rimraf dist",
    "build": "rimraf ./dist && tsc  --incremental false"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "keywords": ["http", "testing", "httpbin"],
  "files": ["dist"],
  "contributors": [
    {
      "name": "Daniele Fiungo",
      "email": "daniele.fiungo@iad2.it"
    },
    {
      "name": "Irene La Bollita",
      "email": "irene.labollita@iad2.it"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/swagger": "^9.5.0",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@ghii/ghii-es": "^1.3.1",
    "@ghii/yaml-loader": "^0.0.7",
    "@scalar/fastify-api-reference": "^1.28.26",
    "@sinclair/typebox": "^0.34.33",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "jwt-decode": "^4.0.0",
    "lodash.omit": "^4.5.0",
    "minimist": "^1.2.8",
    "mkcert": "^3.2.0",
    "nanoid": "^5.1.5",
    "openid-client": "^5.7.1",
    "tslib": "^2.8.1",
    "type-fest": "^4.40.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@mgcrea/pino-pretty-compact": "^1.4.2",
    "@scalar/api-reference": "^1.28.26",
    "@tsconfig/node22": "^22.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/http-errors": "^2.0.4",
    "@types/lodash.omit": "^4.5.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.14.1",
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
